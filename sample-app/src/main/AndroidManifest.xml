<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.psoffritti.slidingpanel.sampleapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".examples.scrollableview.ScrollableViewExampleActivity"></activity>
        <activity android:name=".examples.fittoscreenview.FitToScreenViewExampleActivity" />
        <activity android:name=".examples.dragview.DragViewExampleActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".examples.basic.BasicExampleVerticalActivity" />
        <activity android:name=".examples.basic.BasicExampleHorizontalActivity" />
        <activity
            android:name=".examples.advanced.AdvancedExampleActivity"
            android:theme="@style/Base.Theme.MaterialComponents.Light.DarkActionBar" />
        <activity android:name="com.psoffritti.librarysampleapptemplate.core.SampleAppTemplateActivity" />
    </application>

</manifest>